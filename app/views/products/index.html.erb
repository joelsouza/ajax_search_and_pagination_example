<% title "Products" %>
<%= form_tag products_path, :method => "get", :remote => true, :id => "products_search" do %>
  <label for="search">Search</label>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "go", :name => nil %>
  
  <div id="products">
    <%= render "products" %>
  </div>
<% end %>

<p><%= link_to "New Product", new_product_path %></p>
